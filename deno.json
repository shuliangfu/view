{
  "name": "@dreamer/view",
  "version": "1.0.30",
  "license": "Apache-2.0",
  "description": "Lightweight reactive view engine with signals and effects; fine-grained DOM updates without virtual DOM. Supports CSR, SSR, streaming SSR, and hydration. JSX with v-if, v-for, v-show and store, router, context.",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuliangfu/view.git"
  },
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts",
    "./setup": "./src/setup.ts",
    "./csr": "./src/mod-csr.ts",
    "./hybrid": "./src/mod-hybrid.ts",
    "./jsx-runtime": "./src/jsx-runtime.ts",
    "./jsx-dev-runtime": "./src/jsx-runtime.ts",
    "./signal": "./src/signal.ts",
    "./effect": "./src/effect.ts",
    "./reactive": "./src/reactive.ts",
    "./boundary": "./src/boundary.ts",
    "./directive": "./src/directive.ts",
    "./resource": "./src/resource.ts",
    "./compiler": "./src/compiler.ts",
    "./context": "./src/context.ts",
    "./stream": "./src/stream.ts",
    "./router": "./src/router.ts",
    "./store": "./src/store.ts",
    "./portal": "./src/portal.ts",
    "./transition": "./src/transition.ts",
    "./types": "./src/types.ts"
  },
  "publish": {
    "include": [
      "src/**/*.ts",
      "src/**/*.json",
      "LICENSE",
      "NOTICE",
      "README.md"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "**/test/**",
      "**/tests/**"
    ]
  },
  "tasks": {
    "test": "deno test -A tests/",
    "build": "deno run -A build.ts"
  },
  "imports": {
    "@dreamer/view/jsx-runtime": "./src/jsx-runtime.ts",
    "@dreamer/view/jsx-dev-runtime": "./src/jsx-runtime.ts",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.16",
    "@dreamer/console": "jsr:@dreamer/console@^1.0.12",
    "@dreamer/esbuild": "jsr:@dreamer/esbuild@^1.0.31",
    "@dreamer/server": "jsr:@dreamer/server@^1.0.9",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.2",
    "@dreamer/i18n": "jsr:@dreamer/i18n@^1.0.1",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.13",
    "typescript": "npm:typescript@5.9.3",
    "happy-dom": "npm:happy-dom@20.4.0"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "deno.window",
      "dom"
    ]
  },
  "lint": {
    "include": [
      "src/"
    ],
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    "dist/*",
    "examples/*",
    "tests/data/"
  ],
  "workspace": [
    "examples"
  ]
}
