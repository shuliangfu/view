  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@dreamer/view",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true
